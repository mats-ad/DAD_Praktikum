{
  "uid": "dad-praktikum-final",
  "title": "DAD Praktikum – Final Dashboard",
  "tags": ["DAD", "Praktikum", "GABI"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "style": "dark",
  "time": { "from": "now-30m", "to": "now" },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "label": "Prometheus",
        "query": "prometheus",
        "current": {},
        "refresh": 1
      },
      {
        "type": "query",
        "name": "topic",
        "label": "Kafka Topic",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(dad_kafka_topic_end_offset, topic)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      },
      {
        "type": "query",
        "name": "dataset",
        "label": "Lake Dataset",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(dad_lake_rows, dataset)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "A) System Health (Muss grün sein)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100
    },
    {
      "type": "stat",
      "title": "Kafka UP",
      "id": 1,
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "refId": "A", "expr": "dad_kafka_up", "instant": true }],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Postgres UP",
      "id": 2,
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "refId": "A", "expr": "dad_postgres_up", "instant": true }],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Pipeline Metrics Exporter UP",
      "id": 3,
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "up{job=~\"pipeline_metrics|gabi_pipeline_metrics\"}",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Prometheus Scrape Health (Targets)",
      "id": 4,
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "refId": "A", "expr": "sum(up)", "instant": true }],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      }
    },

    {
      "type": "row",
      "title": "B) Kafka – Datenfluss (Speed Layer Input)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101
    },
    {
      "type": "timeseries",
      "title": "Kafka End Offsets (Wachstum = Daten kommen rein)",
      "id": 10,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (topic) (dad_kafka_topic_end_offset{topic=~\"$topic\"})",
          "legendFormat": "{{topic}}"
        }
      ],
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Kafka Input Rate (Offsets/sec) – grober Throughput",
      "id": 11,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (topic) (rate(dad_kafka_topic_end_offset{topic=~\"$topic\"}[2m]))",
          "legendFormat": "{{topic}}"
        }
      ],
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "type": "row",
      "title": "C) Data Lake – Speed vs Batch (Outputs & Aktualität)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102
    },
    {
      "type": "timeseries",
      "title": "Lake Row Count (zeigt: Dateien entstehen & Daten wachsen)",
      "id": 20,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "dad_lake_rows{dataset=~\"$dataset\"}",
          "legendFormat": "{{dataset}}"
        }
      ],
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Seconds Since Last Update (niedrig = Pipeline läuft)",
      "id": 21,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "dad_lake_last_modified_seconds{dataset=~\"$dataset\"}",
          "legendFormat": "{{dataset}}"
        }
      ],
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 300 },
              { "color": "red", "value": 900 }
            ]
          }
        },
        "overrides": []
      }
    },

    {
      "type": "row",
      "title": "D) Serving – Postgres Exporter (DB-Metriken, minimal)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 103
    },
    {
      "type": "timeseries",
      "title": "Postgres Connections",
      "id": 30,
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "pg_stat_activity_count",
          "legendFormat": "{{datname}} {{state}}"
        }
      ],
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Postgres Transactions (rate)",
      "id": 31,
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(pg_stat_database_xact_commit[2m])",
          "legendFormat": "{{datname}} commits/s"
        },
        {
          "refId": "B",
          "expr": "rate(pg_stat_database_xact_rollback[2m])",
          "legendFormat": "{{datname}} rollbacks/s"
        }
      ],
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },

    {
      "type": "row",
      "title": "E) Praktikums-Checks (schnell erklärbar im Termin)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 31 },
      "id": 104
    },
    {
      "type": "stat",
      "title": "Speed Layer aktiv? (prices_speed rows > 0)",
      "id": 40,
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "dad_lake_rows{dataset=\"prices_speed\"}",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Batch Layer aktiv? (social_batch_daily rows > 0)",
      "id": 41,
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "dad_lake_rows{dataset=\"social_batch_daily\"}",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Pipeline frisch? (max staleness < 15min)",
      "id": 42,
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "max(dad_lake_last_modified_seconds)",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 900 },
              { "color": "red", "value": 1800 }
            ]
          }
        },
        "overrides": []
      }
    }
  ],
  "variables": [],
  "links": [],
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"],
    "time_options": ["5m", "15m", "30m", "1h", "6h", "12h", "24h"]
  }
}
